<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DashboardActivity"
    android:background="@color/white">


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_greetings"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/txt_greetings"
        tools:text="Hi, Bob!"
        android:textSize="20sp"
        android:textStyle="bold"
        android:gravity="center|start"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/iv_user"
        app:layout_constraintTop_toTopOf="@id/iv_user"
        app:layout_constraintEnd_toStartOf="@id/iv_user"
        />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_user"
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_profile"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="16dp"
        />
    
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_dashboard"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/tv_greetings"
        app:layout_constraintStart_toStartOf="@id/tv_greetings"
        app:layout_constraintEnd_toEndOf="@id/iv_user"
        android:background="@drawable/bg_dashboard">
        <com.google.android.material.progressindicator.CircularProgressIndicator
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            app:indicatorColor="@color/white"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:indicatorSize="70dp"
            app:indicatorTrackGapSize="0dp"
            app:trackThickness="8dp"
            app:trackColor="@color/color_track"
            android:indeterminate="false"
            android:progress="15"
            android:id="@+id/pb_achive"
            />
        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="17sp"
            android:textStyle="bold"
            tools:text="15%"
            app:layout_constraintStart_toStartOf="@id/pb_achive"
            app:layout_constraintEnd_toEndOf="@id/pb_achive"
            app:layout_constraintTop_toTopOf="@id/pb_achive"
            app:layout_constraintBottom_toBottomOf="@id/pb_achive"
            android:id="@+id/tv_achive"
            />

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/txt_av_vocab"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:textStyle="bold"
            android:id="@+id/tv_title_vocab"
            app:layout_constraintStart_toEndOf="@id/pb_achive"
            app:layout_constraintTop_toTopOf="@id/pb_achive"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="16dp" />

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/txt_avail_value"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:textStyle="bold"
            android:id="@+id/tv_title_vocab_value"
            app:layout_constraintStart_toEndOf="@id/pb_achive"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_title_vocab"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/cl_dashboard"
        app:layout_constraintStart_toStartOf="@id/cl_dashboard"
        android:layout_marginTop="10dp"
        android:text="@string/txt_myvocab"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:id="@+id/my_vocab" />
    
    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="25dp"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_trash"
        app:layout_constraintTop_toBottomOf="@id/cl_dashboard"
        app:layout_constraintEnd_toEndOf="@id/cl_dashboard"
        android:layout_marginTop="10dp"
        android:id="@+id/iv_delete" />

    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="25dp"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_plus"
        app:layout_constraintTop_toBottomOf="@id/cl_dashboard"
        app:layout_constraintEnd_toStartOf="@id/iv_delete"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="16dp"
        android:id="@+id/iv_plus" />
    
    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_btn_start"
        android:backgroundTint="@color/color_redbutton"
        android:text="@string/txt_cencel"
        android:textColor="@color/white"
        android:paddingHorizontal="20dp"
        android:paddingVertical="5dp"
        android:textSize="14sp"
        android:textStyle="bold"
        android:id="@+id/btn_cencel"
        app:layout_constraintEnd_toEndOf="@id/cl_dashboard"
        app:layout_constraintTop_toBottomOf="@id/cl_dashboard"
        android:layout_marginTop="10dp"
        android:visibility="gone"/>
    
    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/rv_category"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/my_vocab"
        app:layout_constraintStart_toStartOf="@id/my_vocab"
        app:layout_constraintEnd_toEndOf="@id/iv_delete"
        />

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:id="@+id/rv_vocab"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/rv_category"
        app:layout_constraintStart_toStartOf="@id/my_vocab"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/iv_delete"
        />


</androidx.constraintlayout.widget.ConstraintLayout>